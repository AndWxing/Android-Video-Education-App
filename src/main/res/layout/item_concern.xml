<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white">

    <education.juxin.com.educationpro.view.CircleImageView
        android:id="@+id/img_name"
        android:layout_width="@dimen/dimen_75dp"
        android:layout_height="@dimen/dimen_75dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_toEndOf="@+id/img_name"
        android:text="机器人学习阵容"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_17sp" />

    <TextView
        android:id="@+id/concern_check_box"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:background="@drawable/concern_bg"
        android:gravity="center"
        android:padding="@dimen/dimen_5dp"
        android:text="取消关注"
        android:textColor="@color/red"
        android:textSize="@dimen/dimen_13sp" />
</RelativeLayout>
