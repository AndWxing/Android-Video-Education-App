<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_view"
    android:orientation="vertical">

    <include
        layout="@layout/head_title_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_135dp"
        android:background="@color/ui_comm_bg_color">

        <education.juxin.com.educationpro.view.RoundImageView
            android:id="@+id/course_picture_img"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/course_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_toEndOf="@+id/course_picture_img"
            android:ellipsize="end"
            android:lines="3"
            android:maxLength="30"
            android:textColor="@color/result_view"
            android:textSize="@dimen/dimen_16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_toEndOf="@+id/course_picture_img"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/red"
                android:textSize="@dimen/dimen_12sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:gravity="center_vertical"
            android:text="@string/shop_con"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_15sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/course_total_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_1dp"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:gravity="center_vertical"
            android:text="@string/true_time_zhi"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:id="@+id/end_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_1dp"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:gravity="center_vertical"
            android:text="@string/input_invite_code"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_15sp" />

        <EditText
            android:id="@+id/invite_code_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_input_invite_code"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_gray_txt"
            android:textSize="@dimen/dimen_15sp" />

        <ImageButton
            android:id="@+id/scan_btn"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:background="@drawable/sao"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/default_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <Button
            android:id="@+id/btn_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/green_bg"
            android:padding="@dimen/dimen_15dp"
            android:text="@string/submit_order"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_toStartOf="@+id/btn_order"
            android:textColor="@color/red"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_toStartOf="@+id/tv_money"
            android:text="应付金额:"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_15sp" />
    </RelativeLayout>
</LinearLayout>
