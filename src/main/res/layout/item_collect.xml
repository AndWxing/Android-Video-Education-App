<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_person_data"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_110dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_15dp">

    <education.juxin.com.educationpro.view.RoundImageView
        android:id="@+id/collect_book_img"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/collect_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:drawablePadding="@dimen/dimen_3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:id="@+id/collect_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/dimen_13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/course_time"
                android:textSize="@dimen/dimen_13sp" />

            <TextView
                android:id="@+id/tv_time_long"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/red"
                android:textSize="@dimen/dimen_13sp" />

            <TextView
                android:id="@+id/delete_collect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:background="@drawable/concern_bg"
                android:paddingBottom="@dimen/dimen_5dp"
                android:paddingLeft="@dimen/dimen_8dp"
                android:paddingRight="@dimen/dimen_8dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:text="取消收藏"
                android:textColor="@color/red"
                android:textSize="@dimen/dimen_13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

