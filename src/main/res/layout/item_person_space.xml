<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_15dp">

    <LinearLayout
        android:id="@+id/part_root_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_105dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <education.juxin.com.educationpro.view.RoundImageView
            android:id="@+id/civ_space_person_head"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_3dp">

                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=" 零基础系列课程"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=" 2018-02-12 12:12"
                    android:textSize="@dimen/dimen_14sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:background="@color/default_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/secondary_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:text="@string/copy_invite_code"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />

        <View
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/secondary_text" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_qr_code"
        android:layout_width="@dimen/dimen_175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:background="@drawable/login"
        android:paddingLeft="@dimen/dimen_40dp"
        android:paddingRight="@dimen/dimen_40dp"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/dimen_15sp" />

    <ImageView
        android:id="@+id/img_qr_code"
        android:layout_width="@dimen/dimen_175dp"
        android:layout_height="@dimen/dimen_175dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_100dp"
        android:layout_marginRight="@dimen/dimen_100dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:scaleType="fitXY" />
</LinearLayout>
