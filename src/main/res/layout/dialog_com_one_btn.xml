<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_simple_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tip_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:gravity="center"
        android:padding="@dimen/dimen_20dp"
        android:text="提示文字"
        android:textColor="@color/red"
        android:textSize="@dimen/dimen_16sp"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/sex_radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/man_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableEnd="@drawable/selector_all_select_chb"
            android:drawablePadding="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_10dp"
            android:text="男"
            android:textColor="@color/not_psd"
            android:textSize="@dimen/dimen_18sp" />

        <View
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/woman_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableEnd="@drawable/selector_all_select_chb"
            android:drawablePadding="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_10dp"
            android:text="女"
            android:textColor="@color/not_psd"
            android:textSize="@dimen/dimen_18sp" />

        <View
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:id="@+id/sure_btn"
        android:layout_width="@dimen/dimen_225dp"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:background="@drawable/dialog_one_btn_bg"
        android:text="@string/confirm"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/dimen_16sp" />
</LinearLayout>